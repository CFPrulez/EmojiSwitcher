<resources>

    <style name="EmojiSwitcher" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/emojiswitcher_orange</item>
        <item name="colorPrimaryDark">@color/emojiswitcher_orange_dark</item>
        <item name="colorAccent">@color/emojiswitcher_orange_faded1</item>
        <item name="colorButtonNormal">@color/emojiswitcher_orange_faded2</item>
        
        <item name="autoScaleTextViewStyle">@style/EmojiSwitcher.AutoScaleTextView</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/EmojiSwitcher.ActionBar</item>
        <item name="android:divider">@drawable/divider</item>
        <item name="android:dividerPadding">8dp</item>
    </style>

    <style name="EmojiSwitcher.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/emojiswitcher_orange_transparent</item>
    </style>

    <style name="EmojiSwitcher.AutoScaleTextView">
        <item name="minTextSize">12sp</item>
    </style>

    <style name="EmojiSwitcher.ButtonRound" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/button_round</item>
    </style>

</resources>